			<db:sql ><![CDATA[insert into remisions_imss (remision_number,load_id,item_code,batch,number_pieces,destinations,delivery_date,operation_account,destination_description, insertion_date) 
 values (:remision_number,:load,:item_code,:batch,:number_pieces,:destinations,:delivery_date,:operation_account,:destination_description, NOW())
