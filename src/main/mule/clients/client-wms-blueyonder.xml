			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="requestLogin" ><![CDATA[%dw 2.0
output application/json
---
{
	"usr_id": p('client.wms.blueyonder.https.path.login.user'),
	"password": p('client.wms.blueyonder.https.path.login.password')
}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="Visualize payload" doc:id="d5bea657-fb04-4934-954e-7ba890e85ab2" message="#[payload]"/>
		<http:request method="POST" doc:name="Request" doc:id="f44474a8-3557-47f6-bf02-ca763deb9619" config-ref="HTTP_Request_configuration-Wms-blueyonder-connection" path="${client.wms.blueyonder.https.path.login.post}">
			<http:body ><![CDATA[#[vars.requestLogin]]]></http:body>
		</http:request>
		<logger level="INFO" doc:name="Logger" doc:id="c36e3f50-c581-4467-a770-0276dea421f0" message="#[payload]"/>
